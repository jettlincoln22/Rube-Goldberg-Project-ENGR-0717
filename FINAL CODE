int dirA = 12;
int brakeA = 9;
int speedA = 3;

int dirB = 13;
int brakeB = 8;
int speedB = 11;

double lightPIN = A1;
double lightPIN1 = A0;

double lightThreshold = 17.1;
double lightThreshold1 = 15;


void setup() {
  pinMode(dirA, OUTPUT);
  pinMode(brakeA, OUTPUT);
  pinMode(speedA, OUTPUT);

  pinMode(dirB, OUTPUT);
  pinMode(brakeB, OUTPUT);
  pinMode(speedB, OUTPUT);

  Serial.begin(9600);

}

void loop() {
  int lightval1 = analogRead(lightPIN1);
  double lightVal = analogRead(lightPIN);
  Serial.print("Lightballon: ");
  Serial.print(lightval1);
  Serial.print("   Light: ");
  Serial.println(lightVal);

  // Motor A
  if (lightval1 > lightThreshold1) {
  digitalWrite(brakeA, LOW);
  digitalWrite(dirA, LOW);
  analogWrite(speedA, 150);
  delay(1750);
  analogWrite(speedA, 0);
  digitalWrite(brakeA, HIGH); 
  //delay(15000);
  } 

  //Motor B
  if (lightVal > lightThreshold) {
  digitalWrite(brakeB, LOW);
  digitalWrite(dirB, HIGH);
  analogWrite(speedB, 255);
  delay(1000);
  analogWrite(speedB, 0);
  digitalWrite(brakeB, HIGH);} 

}
